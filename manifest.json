{
    "manifest_version": 2,
    "name": "ScholarHub",
    "description": "It simplifies usage of google scholar and scihub",
    "version": "1.0",
    "icons": {
        "64": "icons/scholar_64.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "scholarhub@example.com"
        }
    },
    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "background": {
        "scripts": [
            "scripts/contextScript.js",
            "scripts/shortcuts.js",
            "scripts/browserButtons.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/scihub.png"
        }
    },
    "commands": {
        "scholarKey": {
            "suggested_key": {
                "default": "Alt+G"
            },
            "description": "It opens Google Scholar"
        },
        "scihubKey": {
            "suggested_key": {
                "default": "Ctrl+Alt+S"
            },
            "description": "It opens Google Scholar"
        }
    }
}